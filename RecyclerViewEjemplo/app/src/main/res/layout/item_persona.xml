<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/ivPersonaFoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/teal_200"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtPersonaNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Nombre persona"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivPersonaFoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPersonaFoto"
        app:layout_constraintBottom_toBottomOf="@id/ivPersonaFoto"/>


</androidx.constraintlayout.widget.ConstraintLayout>